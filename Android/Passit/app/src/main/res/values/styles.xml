<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_Dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <!-- DIALOG STYLE -->
    <style name="zaarkdialogfragment" parent="android:Theme.Holo.Dialog" >
        <item name="android:windowBackground">@color/black_75_per</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Zaark_Dialog_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@drawable/transparent_btn_selector</item>
    </style>

    <style name="Zaark_Dialog_Button.Text" >
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">42dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:duplicateParentState">true</item>
    </style>

</resources>
